{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "overrides": {
                    "if": {
                        "after": false
                    },
                    "for": {
                        "after": false
                    },
                    "while": {
                        "after": false
                    }
                }
            }
        ],
        "comma-dangle": "off",
        "comma-spacing": ["error", { "before": false, "after": true}],
        "prefer-template": "off",
        "max-len": [
            "error",
            {
                "code": 80,
                "ignoreUrls": true,
                "ignoreRegExpLiterals": true
            }
        ],
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "no-console": "warn"
    }
}